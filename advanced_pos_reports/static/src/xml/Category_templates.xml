<?xml version="1.0" encoding="UTF-8"?>
<!--Template for category summary button-->
<templates id="template" xml:space="preserve">
    <t t-name="CategorySummaryButton" t-inherit="point_of_sale.ControlButtons"
       t-inherit-mode="extension">
        <xpath expr="//t[@t-if='props.showRemainingButtons']/div/OrderlineNoteButton"
               position="after">
            <button t-att-class="buttonClass"
                    t-on-click="onClick">
                    <i class="fa fa-file-text me-1"/>Category Summary
            </button>
        </xpath>
    </t>
</templates>
